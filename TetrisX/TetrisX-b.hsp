	gosub *remmino
	gosub *putmino

*main	//メインループ

	gosub *downmino
	gosub *keycheck

	gosub *gservercheck
	gosub *timecheck
	gosub *draw

	gosub *recv

	if (DebugMode == 1){ gosub *debug }


