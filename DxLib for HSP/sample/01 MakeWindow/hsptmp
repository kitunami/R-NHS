	#include "DxLib.as"

	ChangeWindowMode TRUE//dxライブラリウインドウモードon

	SetUserWindow hwnd// dxライブラリで描画するウィンドウを変更 

	SetUserWindowMessageProcessDXLibFlag FALSE

	screen 0,800,600//ウインドウ画面はHSP側で変更する

	SetUseFPUPreserveFlag TRUE

	DxLib_Init
	if stat : dialog "初期化エラー" : end // エラーが起きたら終了

	// 描画先画面を裏画面にする
	SetDrawScreen DX_SCREEN_BACK

	SetGraphMode 800,600,16,1//描画範囲設定

	//キーを押したらループ終了
	repeat
		stick key
		if key : break
		wait 1
	loop

	DxLib_End

	end
